    xmlns:c="clr-namespace:AeonHacs.Wpf.Converters;assembly=AeonHacs.Wpf"
    xmlns:local="clr-namespace:CegsMines.Views"
    mc:Ignorable="d"
    Background="{x:Null}">

    <Canvas Width="211" Height="204">

        <!--CTF - Coil trap flow chamber-->
        <v:Chamber v:View.Component="CTF" AutomationProperties.HelpText="Coil trap flow chamber" 
                   Canvas.Left="0" Canvas.Top="39"
                   Data="M0.5,43.5 h34 M17.5,43.5 v-17 M52.5,43.5 h30 M69.5,0.5 v60" />

        <Canvas v:View.Component="pCT" AutomationProperties.HelpText="Coil trap pressure" Background="Transparent"
            Canvas.Left="82" Canvas.Top="75" Width="46" Height="35">
            <v:Mks722BLowPressure Canvas.Top="2" LayoutTransform="{DynamicResource Right}" IsHitTestVisible="False"/>
            <v:Pressure Component="pCT" ContentStringFormat="0.00" 
                        Canvas.Left="10" Canvas.Top="16" IsHitTestVisible="False" />
        </Canvas>
        <!--<StackPanel v:View.Component="pCT" AutomationProperties.HelpText="Coil trap pressure" 
