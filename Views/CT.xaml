            <TextBlock Text="CT2" FontSize="10" HorizontalAlignment="Center" />
            <v:Arrow Direction="Down" HorizontalAlignment="Center"/>
            <v:Break  HorizontalAlignment="Center" />
        </StackPanel>-->

        <!--Valves-->
        <v:Valve Canvas.Left="34" Canvas.Top="73" Component="vCTFlow" HelpText="CT flow valve">
            <v:Restriction Orientation="Horizontal" />
        </v:Valve>

        <v:Valve Canvas.Left="60" Canvas.Top="21" Component="vCTF_CT1" HelpText="CTF-CT1 valve" />
        <v:Valve Canvas.Left="60" Canvas.Top="99" Component="vCTF_CT2" HelpText="CTF-CT2 valve" />

        <v:Valve Canvas.Left="164" Canvas.Top="21" Component="vCT1_CTO" HelpText="CT1-CTO valve" VerticalAlignment="Center" />
        <v:Valve Canvas.Left="164" Canvas.Top="99" Component="vCT2_CTO" HelpText="CT2-CTO valve" VerticalAlignment="Center" />
